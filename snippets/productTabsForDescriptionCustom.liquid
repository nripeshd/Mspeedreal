{% assign descriptionCheck = 0 %}
{% if product.description contains '<h5>Specifications</h5>' %}
          {% assign AboutDiv = product.description | split: '<h5>Specifications</h5>' | first %}
          {% assign SpecificationDiv = product.description | split: '<h5>Specifications</h5>' | last %}
          {% if SpecificationDiv contains '<h5>Additional Information</h5>' %}
            {% assign SpecificationDiv = SpecificationDiv | split: '<h5>Additional Information</h5>' | first %}
          {% elsif SpecificationDiv contains '<h5>Features and Benefits</h5>' %}
             {% assign SpecificationDiv = SpecificationDiv | split: '<h5>Features and Benefits</h5>' | first %}	
          {% elsif SpecificationDiv contains '<h5>Returns &amp; Exchanges</h5>' %}
             {% assign SpecificationDiv = SpecificationDiv | split: '<h5>Returns &amp; Exchanges</h5>' | first %}					  
         {% else %}
          {% assign SpecificationDiv = SpecificationDiv  %}
        {% endif %}
{% endif %}


{%- if AboutDiv != blank -%}
  {% assign descriptionCheck = descriptionCheck | plus: 1 %}
    <div class="product__accordion  product__description accordion quick-add-hidden">
    <details id="Specification">
      <summary role="button" aria-expanded="true" aria-controls="Description">
        <div class="summary__title">
           <h2 class="h4 accordion__title">Description </h2>
        </div><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
        </path></svg>

      </summary>
      <div class="accordion__content rte" id="Description"><br>
    {{ AboutDiv }}
      </div>
    </details>
  </div>
{%- endif -%}

{%- if SpecificationDiv != blank -%}
   {% assign descriptionCheck = descriptionCheck | plus: 1 %}
      <div class="product__accordion  product__description accordion quick-add-hidden">
      <details id="Specification">
        <summary role="button" aria-expanded="true" aria-controls="Specification">
          <div class="summary__title">
             <h2 class="h4 accordion__title">Specification</h2>
          </div>
           <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
          </path></svg>

        </summary>
        <div class="accordion__content rte" id="Specification"><br>
         {{ SpecificationDiv }}	
        </div>
      </details>
    </div>
  {%- endif -%}

   
{% if product.description contains '<h5>Features and Benefits</h5>' %}
  {% assign SpecificationDiv = product.description | split: '<h5>Features and Benefits</h5>' | last %} 
  {% if SpecificationDiv contains '<h5>Additional Information</h5>' %}
             {% assign FeatureAndBenefits = SpecificationDiv | split: '<h5>Additional Information</h5>' | first %}
  {% elsif SpecificationDiv contains '<h5>Returns &amp; Exchanges</h5>' %}
       {% assign FeatureAndBenefits = SpecificationDiv | split: '<h5>Returns &amp; Exchanges</h5>' | first %}
  {% elsif SpecificationDiv contains '<h5>Returns & Exchanges</h5>' %}
       {% assign FeatureAndBenefits = SpecificationDiv | split: '<h5>Returns &amp; Exchanges</h5>' | first %}
  {% endif %}
{% endif %}

{%- if FeatureAndBenefits != blank -%}
   {% assign descriptionCheck = descriptionCheck | plus: 1 %}
    <div class="product__accordion  product__description accordion quick-add-hidden">
    <details id="Specification">
      <summary role="button" aria-expanded="true" aria-controls="FeatureAndBenefits">
        <div class="summary__title">
           <h2 class="h4 accordion__title">Additional Information </h2>
        </div><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
        </path></svg>

      </summary>
      <div class="accordion__content rte" id="FeatureAndBenefits"><br>
    {{ FeatureAndBenefits }}
      </div>
    </details>
  </div>
{%- endif -%}
  
{% if product.description contains '<h5>Additional Information</h5>' %}
  {% assign SpecificationDiv = product.description | split: '<h5>Additional Information</h5>' | last %} 
  {% if SpecificationDiv contains '<h5>Features and Benefits</h5>' %}
             {% assign AdditionalInfo = SpecificationDiv | split: '<h5>Features and Benefits</h5>' | first %}
  {% elsif SpecificationDiv contains '<h5>Returns &amp; Exchanges</h5>' %}
       {% assign AdditionalInfo = SpecificationDiv | split: '<h5>Returns &amp; Exchanges</h5>' | first %}
  {% elsif SpecificationDiv contains '<h5>Returns & Exchanges</h5>' %}
       {% assign AdditionalInfo = SpecificationDiv | split: '<h5>Returns &amp; Exchanges</h5>' | first %}
  {% endif %}
{% endif %}

{%- if AdditionalInfo != blank -%}
   {% assign descriptionCheck = descriptionCheck | plus: 1 %}
    <div class="product__accordion  product__description accordion quick-add-hidden">
    <details id="Specification">
      <summary role="button" aria-expanded="true" aria-controls="AdditionalInfo">
        <div class="summary__title">
           <h2 class="h4 accordion__title">Additional Information </h2>
        </div><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
        </path></svg>

      </summary>
      <div class="accordion__content rte" id="AdditionalInfo"><br>
    {{ AdditionalInfo }}
      </div>
    </details>
  </div>
{%- endif -%}
{% if descriptionCheck >0 %}
  {% if product.description contains '<h5>Returns &amp; Exchanges</h5>' or product.description contains '<h5>Returns & Exchanges</h5>'%}
       {% assign descriptionCheck = descriptionCheck | plus: 1 %}
      {% if product.description contains '<h5>Returns &amp; Exchanges</h5>' %}
        {% assign ReturnAndExchange = product.description | split: '<h5>Returns &amp; Exchanges</h5>' | last %}
      {% elsif product.description contains '<h5>Returns & Exchanges</h5>' %}
         {% assign ReturnAndExchange = product.description | split: '<h5>Returns & Exchanges</h5>' | last %}
      {% endif %}
      
      <div class="product__accordion  product__description accordion quick-add-hidden">
        <details id="ReturnAndExchange">
          <summary role="button" aria-expanded="true" aria-controls="ReturnAndExchange">
            <div class="summary__title">
               <h2 class="h4 accordion__title">Returns &amp; Exchanges</h2>
            </div><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
            </path></svg>
    
          </summary>
          <div class="accordion__content rte" id="ReturnAndExchange">
        {{ ReturnAndExchange }}
          </div>
        </details>
      </div>
  {% endif %}
{% endif %}

<!-- If nothing found -->
{% if descriptionCheck == 0  %}
    <div class="product__accordion  product__description accordion quick-add-hidden">
      <details id="Description">
        <summary role="button" aria-expanded="true" aria-controls="Description">
          <div class="summary__title">
             <h2 class="h4 accordion__title">Description</h2>
          </div><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-caret" viewBox="0 0 10 6">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor">
          </path></svg>
  
        </summary>
        <div class="accordion__content rte" id="Description">
      {{ product.description }}
        </div>
      </details>
    </div>
{% endif %}